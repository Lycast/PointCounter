<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_card"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="1dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/opacity_10"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="26sp"
            android:maxLines="1"
            android:paddingVertical="5dp"
            android:textColor="@color/gray" />

        <LinearLayout
            android:id="@+id/ll_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_iv_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:contentDescription="@string/add_one_point"
                android:src="@drawable/add_18"
                app:tint="@color/gray"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/item_tv_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:textColor="@color/gray"/>

            <ImageView
                android:id="@+id/item_iv_remove"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:contentDescription="@string/remove_one_point"
                android:src="@drawable/remove_18"
                app:tint="@color/gray" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>