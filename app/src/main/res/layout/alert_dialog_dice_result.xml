<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_text_top"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/linear_top"
        app:layout_constraintEnd_toEndOf="@id/linear_top"
        app:layout_constraintStart_toStartOf="@id/linear_top"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:text="@string/total"/>

        <TextView
            android:id="@+id/tv_total_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:layout_marginStart="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/linear_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_text_top">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/dice_card"
            android:layout_margin="2dp"
            android:elevation="0dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_result_dice1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:elevation="2dp"
                android:paddingBottom="2dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/dice_txt"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/dice_card"
            android:layout_margin="2dp"
            android:elevation="0dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_result_dice2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:elevation="2dp"
                android:paddingBottom="2dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/dice_txt"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/dice_card"
            android:layout_margin="2dp"
            android:elevation="0dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_result_dice3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:elevation="2dp"
                android:paddingBottom="2dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/dice_txt"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/dice_card"
            android:layout_margin="2dp"
            android:elevation="0dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_result_dice4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:elevation="2dp"
                android:paddingBottom="2dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/dice_txt"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/dice_card"
            android:layout_margin="2dp"
            android:elevation="0dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_result_dice5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:elevation="2dp"
                android:paddingBottom="2dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/dice_txt"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@id/dialog_img_dice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_top"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/dice_card"
            android:layout_margin="2dp"
            android:elevation="0dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_result_dice6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:elevation="2dp"
                android:paddingBottom="2dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/dice_txt"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/dice_card"
            android:layout_margin="2dp"
            android:elevation="0dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_result_dice7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:elevation="2dp"
                android:paddingBottom="2dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/dice_txt"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/dice_card"
            android:layout_margin="2dp"
            android:elevation="0dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_result_dice8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:elevation="2dp"
                android:paddingBottom="2dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/dice_txt"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/dice_card"
            android:layout_margin="2dp"
            android:elevation="0dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_result_dice9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:elevation="2dp"
                android:paddingBottom="2dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/dice_txt"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/dice_card"
            android:layout_margin="2dp"
            android:elevation="0dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_result_dice10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:elevation="2dp"
                android:paddingBottom="2dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/dice_txt"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_img_dice"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:contentDescription="@string/image_dice"
        android:paddingHorizontal="25dp"
        android:src="@drawable/dice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_roll_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="@string/roll"
        android:textSize="8pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>