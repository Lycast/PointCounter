<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_dialog_dice_result"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/linear_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="@color/dice_card"
            android:layout_margin="5dp"
            android:elevation="0dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_result_dice_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:elevation="2dp"
                android:paddingBottom="2dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/dice_txt"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="@color/dice_card"
            android:layout_margin="5dp"
            android:elevation="0dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_result_dice_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:elevation="2dp"
                android:paddingBottom="2dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/dice_txt"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="@color/dice_card"
            android:layout_margin="5dp"
            android:elevation="0dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_result_dice_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:elevation="2dp"
                android:paddingBottom="2dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/dice_txt"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="@color/dice_card"
            android:layout_margin="5dp"
            android:elevation="0dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_result_dice_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:elevation="2dp"
                android:paddingBottom="2dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/dice_txt"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="@color/dice_card"
            android:layout_margin="5dp"
            android:elevation="0dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_result_dice_5"
