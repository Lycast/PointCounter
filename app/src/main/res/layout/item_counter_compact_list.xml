<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/counter_compact_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:elevation="0dp"
    app:strokeWidth="1dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/layout_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/user_item_text_view_score"
            app:layout_constraintStart_toEndOf="@id/item_image_view_edit"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/item_text_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_of_guest"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:textSize="8pt"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>


            <ImageView
                android:id="@+id/item_image_view_remove_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                app:tint="@color/gray"
                android:contentDescription="@string/remove_one_point"
                android:src="@drawable/_remove_18"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/user_item_text_view_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:layout_marginHorizontal="15dp"
            android:text="@string/_0"
            android:textColor="@color/gray"
            android:textSize="14pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/layout_name"
            app:layout_constraintEnd_toStartOf="@id/item_image_view_remove_point"
            app:layout_constraintTop_toTopOf="parent" />



            <ImageView
                android:id="@+id/item_image_view_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/menu"
                app:tint="@color/gray"
                android:padding="2dp"
                android:src="@drawable/_edit_18"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>