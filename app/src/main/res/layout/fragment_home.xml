<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.navigation.HomeFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/game_card_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:strokeWidth="1dp"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_card_list_participant">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/home_text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/opacity_25"
                android:textSize="12pt"
                android:text="@string/score_counters"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <Button
                android:id="@+id/home_button_solo_counter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:paddingVertical="12dp"
                android:text="@string/solo"
                android:textSize="8pt"
                app:layout_constraintTop_toBottomOf="@id/home_text_title"
                app:layout_constraintBottom_toTopOf="@id/home_button_list_counter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/home_button_duo_counter"/>

            <Button
                android:id="@+id/home_button_duo_counter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:paddingVertical="12dp"
                android:text="@string/duo"
                android:textSize="8pt"
                app:layout_constraintTop_toBottomOf="@id/home_text_title"
                app:layout_constraintBottom_toTopOf="@id/home_button_compact_list_counter"
                app:layout_constraintStart_toEndOf="@id/home_button_solo_counter"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/home_button_list_counter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:paddingVertical="12dp"
                android:text="@string/list"
                android:textSize="8pt"
                app:layout_constraintTop_toBottomOf="@id/home_button_solo_counter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/home_button_compact_list_counter"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <Button
                android:id="@+id/home_button_compact_list_counter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:paddingVertical="12dp"
                android:text="@string/compact_list"
                android:textSize="8pt"
                app:layout_constraintTop_toBottomOf="@id/home_button_duo_counter"
                app:layout_constraintStart_toEndOf="@id/home_button_list_counter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/home_card_list_participant"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:strokeWidth="1dp"
        android:elevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/game_card_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_card_dice">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/home_img_add"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:elevation="1dp"
                android:layout_marginEnd="10dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/_add_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/home_text_list"
                android:contentDescription="@string/add_new_participant" />

            <ImageView
                android:id="@+id/home_img_delete"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:elevation="1dp"
                android:layout_marginStart="5dp"
                android:padding="6dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/_delete_forever_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/home_text_list"
                android:contentDescription="@string/delete_all_user" />

            <TextView
                android:id="@+id/home_text_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/opacity_25"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/participants"
                android:textSize="12pt"
                app:layout_constraintBottom_toTopOf="@id/recycler_view_guests"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/home_img_add_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="1dp"
                android:src="@drawable/_add_36"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/add_new_participant" />

            <TextView
                android:id="@+id/home_text_add_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_new_participant"
                android:textSize="9pt"
                app:layout_constraintTop_toBottomOf="@id/home_img_add_empty"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_guests"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                app:layout_constraintTop_toBottomOf="@id/home_text_list"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_list_home"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/home_card_dice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:strokeWidth="1dp"
        android:elevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/home_card_list_participant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/home_text_dice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:background="@color/opacity_25"
                android:textSize="12pt"
                android:text="@string/dice"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <ImageView
                android:id="@+id/home_edit_dice_img"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/_edit_24"
                app:layout_constraintBottom_toTopOf="@id/home_edit_dice_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_dice"
                app:layout_constraintTop_toBottomOf="@+id/home_text_dice"
                android:contentDescription="@string/edit" />

            <TextView
                android:id="@+id/home_edit_dice_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/customize"
                android:textSize="5pt"
                app:layout_constraintTop_toBottomOf="@id/home_edit_dice_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_dice" />


            <ImageView
                android:id="@+id/img_dice"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:contentDescription="@string/image_dice"
                android:src="@drawable/dice"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/home_edit_dice_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_text_dice" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>