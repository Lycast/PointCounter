<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_step"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/step_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/_1"
        android:textSize="9pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/step_5"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/step_5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/_5"
        android:textSize="9pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/step_10"
        app:layout_constraintStart_toEndOf="@id/step_1"/>

    <TextView
        android:id="@+id/step_10"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/_10"
        android:textSize="9pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/step_25"
        app:layout_constraintStart_toEndOf="@id/step_5"/>

    <TextView
        android:id="@+id/step_25"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/_25"
        android:textSize="9pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/step_50"
        app:layout_constraintStart_toEndOf="@id/step_10"/>

    <TextView
        android:id="@+id/step_50"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/_50"
        android:textSize="9pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/step_25"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>