<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/toolbar_image_view_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:src="@drawable/_back_36"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/_return" />

        <ImageView
            android:id="@+id/toolbar_image_view_dice"
            android:layout_width="65dp"
            android:layout_height="27dp"
            android:src="@drawable/dice"
            app:layout_constraintStart_toEndOf="@id/toolbar_image_view_back"
            app:layout_constraintEnd_toStartOf="@id/toolbar_image_add"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/dice" />

        <ImageView
            android:id="@+id/toolbar_image_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/_add_36"
            android:paddingHorizontal="20dp"
            app:layout_constraintEnd_toStartOf="@id/toolbar_image_view_menu"
            app:layout_constraintStart_toEndOf="@id/toolbar_image_view_dice"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/add_new_participant" />

        <ImageView
            android:id="@+id/toolbar_image_view_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:contentDescription="@string/menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/_menu_36"
            tools:ignore="RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>