<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/img_second"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/svg_crown_48"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_first"
        android:contentDescription="@string/image_crown" />
    <TextView
        android:id="@+id/name_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_of_guest"
        app:layout_constraintTop_toBottomOf="@id/img_second"
        app:layout_constraintStart_toStartOf="@id/img_second"
        app:layout_constraintEnd_toEndOf="@id/img_second"/>



    <ImageView
        android:id="@+id/img_first"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/svg_crown_48"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_second"
        app:layout_constraintEnd_toStartOf="@id/img_third"
        android:contentDescription="@string/image_crown" />
    <TextView
        android:id="@+id/name_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_of_guest"
        app:layout_constraintTop_toBottomOf="@id/img_first"
        app:layout_constraintStart_toStartOf="@id/img_first"
        app:layout_constraintEnd_toEndOf="@id/img_first"/>



    <ImageView
        android:id="@+id/img_third"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/svg_crown_48"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_first"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/image_crown" />
    <TextView
        android:id="@+id/name_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_of_guest"
        app:layout_constraintTop_toBottomOf="@id/img_third"
        app:layout_constraintStart_toStartOf="@id/img_third"
        app:layout_constraintEnd_toEndOf="@id/img_third"/>

</androidx.constraintlayout.widget.ConstraintLayout>