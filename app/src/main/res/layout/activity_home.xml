<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/toolbar_layout" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/home_activity_bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <TextView
            android:id="@+id/text_solo_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/solo"
            android:textSize="9pt"
            app:layout_constraintStart_toStartOf="@id/image_view_solo_card"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/image_view_solo_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            android:layout_marginHorizontal="5dp"
            app:strokeWidth="1dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toStartOf="@id/image_view_duo_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_solo_counter">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:background="@drawable/ex_solo"
                android:contentDescription="@string/solo_counter_example" />

        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/text_duo_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/duo"
            android:textSize="9pt"
            app:layout_constraintStart_toStartOf="@id/image_view_duo_card"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/image_view_duo_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            android:layout_marginHorizontal="5dp"
            app:strokeWidth="1dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="@dimen/cardview_default_elevation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_view_solo_card"
            app:layout_constraintTop_toBottomOf="@id/text_solo_counter">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:background="@drawable/ex_duo"
                android:contentDescription="@string/duo" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/text_list_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/list"
            android:textSize="9pt"
            app:layout_constraintStart_toStartOf="@id/image_view_list_card"
            app:layout_constraintTop_toBottomOf="@id/image_view_solo_card" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/image_view_list_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            android:layout_marginHorizontal="5dp"
            app:strokeWidth="1dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toBottomOf="@id/text_list_counter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/image_view_compact_list_card">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/ex_list"
                android:contentDescription="@string/list"
                android:adjustViewBounds="true"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/text_compact_list_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/compact_list"
            android:textSize="9pt"
            app:layout_constraintStart_toStartOf="@id/image_view_compact_list_card"
            app:layout_constraintTop_toBottomOf="@id/image_view_duo_card" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/image_view_compact_list_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            android:layout_marginHorizontal="5dp"
            app:strokeWidth="1dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintStart_toEndOf="@id/image_view_list_card"
            app:layout_constraintTop_toBottomOf="@id/text_compact_list_counter"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/ex_compact_list"
                android:contentDescription="@string/list"
                android:adjustViewBounds="true"/>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/home_activity_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom_navigation" />
</androidx.constraintlayout.widget.ConstraintLayout>